<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#E9E9E9"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
            android:text="Pembayaran"
            android:layout_marginTop="30dp"
            android:layout_marginStart="0dp"
            android:textStyle="bold"
            android:textSize="19dp"
            android:id="@+id/pembayaran"
            android:textColor="#FF9800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_below="@+id/pembayaran"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:text="Tunggakan Lainnya"
            android:textSize="21dp"
            android:id="@+id/pembayaran2"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Pembayaran Lain-Lain"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/semester"
            android:layout_below="@+id/pembayaran2"
            android:textColor="#FF9800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/semester"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:textAlignment="center"
                android:text="Pembayaran"
                android:textSize="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-0dp"
                android:textColor="#000000"
                android:id="@+id/bulan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/bulan"
                android:layout_height="2dp"
                android:background="#FF9800"
        />
        <ScrollView
                android:layout_width="match_parent"
                android:id="@+id/scroll"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:orientation="vertical">

                <LinearLayout
                        android:background="@drawable/bg_prof"
                        android:id="@+id/uang_gedung"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="50dp">
                    <TextView
                            android:text="Uang Gedung"
                            android:textSize="21dp"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:background="@drawable/bg_prof"
                        android:id="@+id/zakat"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="50dp">
                    <TextView
                            android:text="ZAKAT"
                            android:textSize="21dp"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>