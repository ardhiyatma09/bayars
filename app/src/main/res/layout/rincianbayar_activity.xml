<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="#EEECEC"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbarshape"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:titleMarginTop="10dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Pembayaran"
            android:textStyle="bold"
            android:textColor="@color/text_orange"
            android:textSize="23sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/textView3"/>
    <TextView
            android:text="Sumbangan Pembinaan Pendidikan (SPP) / Tunggakan lainnya"
            android:layout_width="350dp"
            android:textSize="19sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:id="@+id/textView4" android:layout_marginTop="12dp"/>

    <TextView
            android:id="@+id/nm_bulan"
            android:text=""
            android:textSize="19sp"
            android:textColor="@color/text_biru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
            android:background="@drawable/shape_shape"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:id="@+id/relativeLayout" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/nm_bulan" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.493">
        <TextView
                android:textStyle="bold"
                android:text="SPP"
                android:paddingStart="20sp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="369dp"
                tools:layout_editor_absoluteX="46dp"/>
        <TextView
                android:textStyle="bold"
                android:textColor="@color/text_biru"
                android:text="RP. 0.00"
                android:paddingStart="20sp"
                android:textSize="23sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="369dp"
                tools:layout_editor_absoluteX="246dp"/>
    </LinearLayout>
    <LinearLayout
            android:background="@drawable/shape_shape"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:id="@+id/relativeLayout2" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/nm_bulan" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.493">
        <TextView
                android:textStyle="bold"
                android:text="Lainnya"
                android:paddingStart="20sp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:textStyle="bold"
                android:textColor="@color/text_biru"
                android:text="RP. 0.00"
                android:paddingStart="20sp"
                android:textSize="23sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
            android:text="bayar"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@color/text_biru"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="1.0"/>

</android.support.constraint.ConstraintLayout>